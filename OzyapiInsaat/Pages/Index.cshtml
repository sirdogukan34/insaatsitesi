@page
@model OzyapiInsaat.Pages.IndexModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<main>
    <!-- Hero Section -->
    <section class="hero-bg text-white h-[60vh] md:h-[80vh] flex items-center">
        <div class="container mx-auto px-6 text-center">
            <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-4">Hayallerinizi İnşa Ediyoruz: Kalite ve Güvenle</h1>
            <p class="text-lg md:text-xl text-gray-200 mb-8 max-w-3xl mx-auto">Tecrübeli ekibimizle, temelden çatıya anahtar teslim projeler sunarak yaşam alanlarınızı geleceğe taşıyoruz.</p>
            <a href="#iletisim" class="bg-orange-500 text-white font-bold py-3 px-8 rounded-lg text-lg hover:bg-orange-600 transition duration-300 transform hover:scale-105">Ücretsiz Keşif ve Teklif İçin Ulaşın</a>
        </div>
    </section>

    <!-- Hizmetlerimiz Section -->
    <section id="hizmetler" class="py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900">İnşaat Hizmetlerimiz</h2>
                <p class="text-gray-600 mt-2">Geleceği inşa ederken sunduğumuz profesyonel çözümler.</p>
                <div class="w-24 h-1 bg-orange-500 mx-auto mt-4"></div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var service in Model.Services)
                {
                    <div class="bg-gray-50 p-8 rounded-lg shadow-lg text-center hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
                        <div class="text-orange-500 text-5xl mb-4"><i class="@service.IconClass"></i></div>
                        <h3 class="text-xl font-bold mb-2">@service.Title</h3>
                        <p class="text-gray-600">@service.Description</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Yaptığımız İşler (Projeler) Section -->
    <section id="projeler" class="py-20 bg-gray-100">
        <div class="container mx-auto px-6">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Referans Projelerimiz</h2>
                <p class="text-gray-600 mt-2">Kalitemizi ve tecrübemizi yansıtan bazı çalışmalarımız.</p>
                <div class="w-24 h-1 bg-orange-500 mx-auto mt-4"></div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var project in Model.Projects)
                {
                    <div class="group relative overflow-hidden rounded-lg shadow-lg">
                        <img src="@project.ImageUrl" alt="@project.Title" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                        <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-60 transition-all duration-300"></div>
                        <div class="absolute inset-0 flex items-center justify-center p-4">
                            <h3 class="text-white text-xl font-bold text-center" style="text-shadow: 1px 1px 4px rgba(0,0,0,0.8);">@project.Title</h3>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Hakkımızda Section -->
    <section id="hakkimizda" class="py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="flex flex-col md:flex-row items-center gap-12">
                <div class="md:w-1/2">
                    <img src="@Model.AboutInfo.ImageUrl" alt="Özyapı İnşaat Ekibi" class="rounded-lg shadow-xl">
                </div>
                <div class="md:w-1/2">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">@Model.AboutInfo.Title</h2>
                    <div class="w-24 h-1 bg-orange-500 mb-6"></div>
                    <div class="text-gray-600 space-y-4">
                        @Html.Raw(Model.AboutInfo.Content?.Replace("\n", "<br />"))
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- İletişim & Fiyatlandırma Section -->
    <section id="iletisim" class="py-20 bg-gray-100">
        <div class="container mx-auto px-6">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Bize Ulaşın ve Fiyat Teklifi Alın</h2>
                <p class="text-gray-600 mt-2">Projenizin detaylarını paylaşın, size özel çözümler ve fiyatlandırma ile en kısa sürede geri dönelim.</p>
                <div class="w-24 h-1 bg-orange-500 mx-auto mt-4"></div>
            </div>
            <div class="bg-white rounded-lg shadow-xl p-8 md:p-12 max-w-4xl mx-auto">
                <div class="flex flex-col md:flex-row gap-12">
                    <!-- Contact Form -->
                    <div class="w-full md:w-2/3">
                        <form id="contact-form">
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-6">
                                <input type="text" placeholder="Adınız Soyadınız" class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500" required>
                                <input type="email" placeholder="E-posta Adresiniz" class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500" required>
                            </div>
                            <div class="mb-6">
                                <input type="text" placeholder="Konu" class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500" required>
                            </div>
                            <div class="mb-6">
                                <textarea placeholder="Mesajınız (Proje türü, arsa bilgileri, tahmini metrekare vb.)" rows="5" class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500" required></textarea>
                            </div>
                            <button type="submit" class="w-full bg-orange-500 text-white font-bold py-3 px-6 rounded-lg hover:bg-orange-600 transition duration-300">Teklifi Gönder</button>
                        </form>
                        <p id="form-success-message" class="hidden mt-4 text-center text-green-600 font-semibold">Mesajınız başarıyla gönderildi. En kısa sürede sizinle iletişime geçeceğiz!</p>
                    </div>
                    <!-- Contact Info -->
                    <div class="w-full md:w-1/3">
                        <h3 class="text-xl font-bold mb-4 border-b pb-2">İletişim Bilgileri</h3>
                        <div class="space-y-4 text-gray-700">
                            <p class="flex items-start"><i class="fas fa-map-marker-alt text-orange-500 mt-1 mr-3 w-4 text-center"></i><span>@Model.ContactDetails.Address</span></p>
                            <p class="flex items-center"><i class="fas fa-phone text-orange-500 mr-3 w-4 text-center"></i><a href="tel:@Model.ContactDetails.Phone" class="hover:text-orange-500">@Model.ContactDetails.Phone</a></p>
                            <p class="flex items-center"><i class="fas fa-envelope text-orange-500 mr-3 w-4 text-center"></i><a href="mailto:@Model.ContactDetails.Email" class="hover:text-orange-500">@Model.ContactDetails.Email</a></p>
                            <p class="flex items-center"><i class="fas fa-clock text-orange-500 mr-3 w-4 text-center"></i><span>@Model.ContactDetails.WorkingHours</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

